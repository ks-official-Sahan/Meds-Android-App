<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".activity.HomeActivity"
    tools:openDrawer="start">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!--    Default Toolbar    -->
        <!--        <com.google.android.material.appbar.AppBarLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/background_nav_top"-->
        <!--            android:clipToPadding="false">-->

        <!--            <com.google.android.material.appbar.MaterialToolbar-->
        <!--                android:id="@+id/toolbar_user"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="?attr/actionBarSize"-->
        <!--                android:hapticFeedbackEnabled="true"-->
        <!--                android:paddingVertical="6dp"-->
        <!--                app:layout_scrollFlags="scroll|enterAlways|snap"-->
        <!--                app:title="@string/app_name"-->
        <!--                app:titleTextColor="@color/white" />-->
        <!--        </com.google.android.material.appbar.AppBarLayout>-->
        <!--    Default Toolbar    -->

        <!--    Custom Toolbar    -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="top|center_horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="5dp"
            android:background="@drawable/background_nav_top"
            android:paddingBottom="5dp"
            android:elevation="5dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/action_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:contentDescription="@string/menu"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu"
                app:tint="?attr/colorNeutral500" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/logo"
                android:importantForAccessibility="no"
                android:paddingTop="3dp"
                android:src="?attr/logo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center|end"
                app:cardCornerRadius="35dp"
                app:strokeColor="?attr/colorNeutral300"
                app:strokeWidth="3dp">

                <ImageView
                    android:id="@+id/action_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:contentDescription="@string/menu_profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />

            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
        <!--    Custom Toolbar    -->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerViewHome"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="56dp"
            android:paddingBottom="85dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="@color/secondary_light"
            android:contentDescription="@string/app_name"
            app:layout_anchor="@id/fragmentContainerViewHome"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:visibility="gone" />

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/background_nav_bottom"
            android:paddingBottom="0dp"
            app:itemActiveIndicatorStyle="@drawable/background_menu_item"
            app:itemIconTint="?attr/colorNeutral500"
            app:labelVisibilityMode="auto"
            app:menu="@menu/user_bottom_nav_menu" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_user"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorNeutral50"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/user_nav_header"
        app:itemBackground="@drawable/background_menu_item"
        app:menu="@menu/user_navigation_menu"
        tools:visibility="gone" />

</androidx.drawerlayout.widget.DrawerLayout>
